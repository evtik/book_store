%main.container
  #slider.carousel.slide{'data-ride': "carousel"}
    %ol.carousel-indicators.general-carousel-indicators
      %li.active{'data-target': "#slider", 'data-slide-to': "0"}
      - (@latest_books.length - 1).times do |i|
        %li{'data-target': "#slider", 'data-slide-to': "#{i + 1}"}
    .carousel-inner{role: "listbox"}
      .item.active
        .row
          .col-sm-5
            .general-img-wrap
              %img.img-shadow.general-thumbnail-img{src: "http://jonathantweedy.com/resources/thumbs/SmashingBook5ResponsiveWebDesign.jpg", alt: "design-book"}
          .col-sm-7
            .mb-60
              %h1= @latest_books.first.title
              %p.lead= @latest_books.first.description
              %p.in-grey-600.small= @latest_books.first.authors.map(&:full_name).join(', ')
              .general-align.pt-20
                %button.btn.btn-primary Buy Now
      - @latest_books[1..-1].each do |book|
        .item
          .row
            .col-sm-5
              .general-img-wrap
                %img.img-shadow.general-thumbnail-img{src: "http://jonathantweedy.com/resources/thumbs/SmashingBook5ResponsiveWebDesign.jpg", alt: "design-book"}
            .col-sm-7
              .mb-60
                %h1= book.title
                %p.lead= book.description
                %p.in-grey-600.small= book.authors.map(&:full_name).join(', ')
                .general-align.pt-20
                  %button.btn.btn-primary Buy Now
    %a.left.carousel-control{href: "#slider", role: "button", 'data-slide': "prev"}
      %span.icon-prev{'aria-hidden': "true"}
      %span.sr-only Previous
    %a.right.carousel-control{href: "#slider", role: "button", 'data-slide': "next"}
      %span.icon-next{'aria-hidden': "true"}
      %span.sr-only Next
.container
  .jumbotron.text-center.mb-0
    %h2.h1 Welcome to our amazing Bookstore!
    .mb-res-50
      %p.in-grey-600 We pore through hundreds of new books each month and select the five best we can find to share with our members.
    -# %button.btn.btn-default Get Started
    = link_to 'Get started', 'catalog/index', class: 'button btn btn-default'
  .mb-35
    %h3 Best Sellers
    .row
      - @most_popular_books.each do |book|
        .col-sm-6.col-md-3
          .general-thumb-wrap
            .thumbnail.general-thumbnail
              %img.img-shadow.general-thumbnail-img{src: "http://jonathantweedy.com/resources/thumbs/SmashingBook5ResponsiveWebDesign.jpg", alt: "design-book"}
              .thumb-hover
                .general-thumb-link-wrap
                  %a.thumb-hover-link{href: "#"}
                    %i.fa.fa-eye.thumb-icon{'aria-hidden': "true"}
                  %a.thumb-hover-link{href: "#"}
                    %i.fa.fa-shopping-cart.thumb-icon
          .mb-35
            .clearfix
              %p.pull-right.font-16.in-gold-500= book.price
              %p.general-title.mr-55= book.title
            %span.divider-sm
            %p.in-grey-600.small= book.authors.map(&:full_name).join(', ')
