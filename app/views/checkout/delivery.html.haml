%main.container.general-main-wrap
  %h1.general-title-margin Checkout
  = render 'progress'
  = form_for @order, url: '/checkout/delivery', method: :post, class: "res-mb-100" do |f|
    %h3.general-subtitle Shipping method
    .visible-xs
      = render 'xs_deliveries_radio'
    .hidden-xs.mb-res-50
      = render 'deliveries_radio'
    .general-text-align
      %p.in-gold-500.font-18 Order Summary
      %table.general-summary-table
        %tr
          %td
            %p.font-16 Subtotal:
          %td
            %p.font-16 €117.69
        %tr
          %td
            %p.font-16 Coupon:
          %td
            %p.font-16 €0.00
        %tr
          %td
            %strong.font-18 Order Total:
          %td
            %strong.font-18 €117.69
    -# .text-center
      -# %button.btn.btn-default.mb-20 Save and Continue
    = f.submit 'Save and continue', class: "btn btn-default center-block mb-20"
