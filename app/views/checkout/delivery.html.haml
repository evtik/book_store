%main.container.general-main-wrap
  %h1.general-title-margin Checkout
  = render 'progress'
  = form_for @order, url: '/checkout/delivery', method: :post, class: "res-mb-100" do |f|
    %h3.general-subtitle Shipping method
    .visible-xs
      - @shipments.each do |shipment|
        -# .general-cart-item.divider-lg-bottom
        %table.table
          %tr
            %td.col-half
              %span.in-grey-600 Method
            %td.col-half
              .form-group.radio.mt-0.mb-0
                %label.font-16.font-weight-light.pl-0
                  = radio_button_tag :shipment_id, shipment.id,
                    false,
                    class: "radio-input", hidden: true,
                    id: "xs-shipment-#{shipment.id}"
                  %span.radio-icon
                  %span.radio-text= shipment.method
          %tr
            %td
              %span.in-grey-600 Days
            %td
              %span.font-16.font-weight-light #{shipment.days_min} to #{shipment.days_max} days

          %tr
            %td
              %span.in-grey-600 Price
            %td
              %span.font-16.in-gold-500= shipment.price 
        .general-cart-item.divider-lg-bottom.mb-30
    .hidden-xs.mb-res-50
      %table.table.table-hover
        %thead
          %tr
            %th.col-method
              %span.in-grey-600.ml-40 Method
            %th
              %span.in-grey-600 Days
            %th
              %span.in-grey-600 Price
        %tbody
          - @shipments.each do |shipment|
            %tr
              %td
                .form-group.radio.mt-0.mb-0
                  %label.font-16.font-weight-light.pl-0
                    = radio_button_tag :shipment_id, shipment.id,
                      @order.shipment_id == shipment.id,
                      class: "radio-input", hidden: "true",
                      id: "shipment-#{shipment.id}"
                    %span.radio-icon
                    %span.radio-text= shipment.method
              %td
                %span #{shipment.days_min} to #{shipment.days_max} days
              %td
                %span.font-16.in-gold-500= shipment.price
    .general-text-align
      %p.in-gold-500.font-18 Order Summary
      %table.general-summary-table
        %tr
          %td
            %p.font-16 Subtotal:
          %td
            %p.font-16 €117.69
        %tr
          %td
            %p.font-16 Coupon:
          %td
            %p.font-16 €0.00
        %tr
          %td
            %strong.font-18 Order Total:
          %td
            %strong.font-18 €117.69
    -# .text-center
      -# %button.btn.btn-default.mb-20 Save and Continue
    = f.submit 'Save and continue', class: "btn btn-default center-block mb-20"
