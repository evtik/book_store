%main.container.general-main-wrap
  %h1.general-title-margin Checkout
  = render 'progress'
  .text-center.mb-40
    %h3.general-subtitle Thank You for your Order!
    %p.font-weight-light An order confirmation has been sent to #{current_user.email}
  .row.mb-20
    .col-sm-6
      .visible-xs
        %p.general-order-number.mb-0 Order ##{@order.number}
        %p.general-address.mb-30= l @order.created_at, format: :long_date
      = render 'address_summary', address: @order.addresses.first,
        render_edit_link: false
    .col-sm-6.hidden-xs.text-right
      %p.general-order-number.mb-0 Order ##{@order.number}
      %p.general-address.mb-30= l @order.created_at, format: :long_date
  .visible-xs
    .general-cart-item.divider-lg
      = render '/cart/xs_cart_items', render_inputs: false
  .hidden-xs.divider-lg.pt-20
    = render '/cart/cart_items', render_inputs: false
  .text-center.general-text-right
    %p.in-gold-500.font-18 Order Summary
    %table.general-summary-table.general-summary-table-right.general-text-right
      %tr
        %td
          %p.font-16 Subtotal:
        %td
          %p.font-16 €117.69
      %tr
        %td
          %p.font-16 Coupon:
        %td
          %p.font-16 €0.00
      %tr
        %td
          %strong.font-18 Order Total:
        %td
          %strong.font-18 €117.69
  .text-center
    %button.btn.btn-default.mb-20 Back to Store
