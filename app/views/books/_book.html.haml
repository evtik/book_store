.col-xs-6.col-sm-3
  .general-thumb-wrap
    .thumbnail.general-thumbnail
      -# = image_tag book_image_path(book.images.first), alt: book.title,
      = image_tag book.images.first, alt: book.title,
        class: 'img img-shadow general-thumbnail-img'
      .thumb-hover
        .general-thumb-link-wrap
          =link_to book_path(book), class: 'thumb-hover-link' do
            %i.fa.fa-eye.thumb-icon{'aria-hidden': "true"}
          =link_to cart_add_path(id: book.id), method: :post,
            class: 'thumb-hover-link' do
            %i.fa.fa-shopping-cart.thumb-icon
  .general-thumb-info
    %p.pull-right.font-16.in-gold-500= number_to_currency book.price
    %p.general-title= truncate book.title, length: 25
    %span.divider-sm
    %p.in-grey-600.small= book.authors_short
