%header.navbar.navbar-default
  .container
    .navbar-header
      %button.navbar-toggle.pull-left.ml-15{type: "button", 'data-toggle': "collapse", 'data-target': "#navbar"}
        %span.sr-only
        %span.icon-bar
        %span.icon-bar
        %span.icon-bar
      %a.navbar-brand Bookstore
      %a.shop-link.pull-right.visible-xs{href: "/"}
        %s.panshom-icon
          %span.shop-quantity 3
    %a.shop-link.pull-right.hidden-xs{href: "/cart"}
      %span.shop-icon
        - if cart_items_count.zero?
          %span.shop-quantity 0
        - else
          %span.shop-quantity= cart_items_count
    #navbar.navbar-collapse.collapse.pl-30{'aria-expanded': "false"}
      .visible-xs
        %button.close{type: "button", 'aria-label': "Close"}
          %span{'aria-hidden': "true"} &times;
        %ul.nav.navbar-nav
          %li
            %a{href: "/"} Home
          %li
            %a{type: "button", 'data-toggle': "collapse", href: "#menu", 'aria-expanded': "false", 'aria-controls': "menu"} Shop
            %ul#menu.collapse.list-unstyled.pl-30.mb-10{'aria-expanded': "false"}
              -@categories.each do |category|
                %li
                  =link_to capitalize_category(category.first.first), catalog_index_path('category' => category.first.second, 'sort_by' => 'created_at', 'order' => 'desc', 'limit' => '12'), class: 'collapse-link'
          %li
            %a{href: "#"} My account
      .hidden-xs
        %ul.nav.navbar-nav
          %li
            %a{href: "/"} Home
          %li.dropdown
            %a.dropdown-toggle{'data-toggle': "dropdown", role: "button", 'aria-haspopup': "true", 'aria-expanded': "false"} Shop
            %ul.dropdown-menu
              -@categories.each do |category|
                %li
                  =link_to capitalize_category(category.first.first), catalog_index_path('category' => category.first.second, 'sort_by' => 'created_at', 'order' => 'desc', 'limit' => '12')
          -if user_signed_in?
            %li.dropdown
              %a.dropdown-toggle{'data-toggle': "dropdown", role: "button", 'aria-haspopup': "true", 'aria-expanded': "false"} My account
              %ul.dropdown-menu
                %li
                  %a{href: "#"} Orders
                %li
                  %a{href: "#"} Settings
                %li.divider{role: "separator"}
                %li
                  %a{href: '/logout'} Log Out
          -else
            %li
              %a{href: '/login'} Log in
            %li
              %a{href: '/users/sign_up'} Sign up
